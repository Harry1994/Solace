<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/colorAccent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/question_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/question_text_before"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="25dp"
        android:fontFamily="@font/arial_round"
        android:layout_marginBottom="150dp"
        android:layout_marginTop="-150dp"/>

    <com.konstantinidis.harry.arcseeker.ArcSeekBar
        android:id="@+id/seekArc"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:padding="20dp"
        app:progressBackgroundColor="@color/sliderBack"
        app:progressBackgroundWidth="20dp"
        app:progress="100"
        app:progressWidth="20dp"
        app:roundEdges="true" />

    <Button
        android:id="@+id/solaceButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/round_button"
        android:text="@string/app_name"
        android:textColor="@android:color/white"
        android:textAllCaps="false"
        android:fontFamily="@font/arial_round"
        android:layout_marginTop="110dp"
        android:layout_marginBottom="-110dp"
        />



</LinearLayout>